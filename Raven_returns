Create a query that returns a list of all orders along with the name of the employee who processed each order

from Orders as o
load o.Employee as e
select {
    OrderId: id(o),
    EmployeeName: e.LastName
}


Create a query that returns a list of all orders with the name of the company who made the order.

from Orders as o
load o.Company as c
select {
    Order: id(o),
    CompanyName: c.Name
}


Create a query that returns a list of all products and their categories
Example: Tofu – Produce, Pavlova – Confections

from Products as p
load p.Category as c
select {
    ProductName: p.Name,
    CategoryName: c.Name
}


Create a query that returns a list of all employees and their superiors
Example:
king – Buchanan, Suyama – Buchanan - Last names are sufficient

from Employees as e
load e.ReportsTo as s
select {
    EmployeeLastName: e.LastName,
    SupervisorLastName: s.LastName
}


Create a query that returns a list of all orders with the name of the Employee who processed the order
(example: orders/11 – Davolio)

from Orders as o
load o.Employee as e
select {
    Orders: id(o),
    Employee: e.LastName
}


//Create a query that returns a list of all products and their suppliers

from Products as p
load p.Supplier as s
select {
    Products: p.Name,
    Suppliers: s.Name
}


//list of all discontinued products ordered by how many units remains in stock from most to least
//including products out of stock
from Products as p
where p.Discontinued = true
order by p.UnitsInStock desc
select {
    ProductName: p.Name,
    UnitsInStock: p.UnitsInStock
}
